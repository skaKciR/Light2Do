        text-align: center;
    }

        .slider-content h3 {
            font-size: 24px;
            margin-top: 0;
        }

        .slider-content p {
            font-size: 16px;
            color: #333;
        }

    .author {
        font-style: italic;
        color: #777;
    }

    .slider-controls {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .slider-control {
        font-size: 24px;
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 5px 50px;
        cursor: pointer;
